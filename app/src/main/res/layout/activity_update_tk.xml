<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateTKActivity"
    android:orientation="vertical">

    <TextView
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:background="#F1970D"
        android:padding="5dp"
        android:textAllCaps="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật tài khoản"
        android:textSize="25sp"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_hotendangnhap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Họ tên"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_luong1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Lương"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_vitridangnhap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Vị trí"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_taikhoandangnhap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Tên tài khoản"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_matkhaudangnhap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Mật khẩu"
            android:inputType="textPassword" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_huythem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:text="Trờ về" />

            <Button
                android:id="@+id/btn_dongythem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="Đồng ý" />

        </LinearLayout>
    </LinearLayout>
<EditText
    android:id="@+id/tv_idupdate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    ></EditText>
</LinearLayout>