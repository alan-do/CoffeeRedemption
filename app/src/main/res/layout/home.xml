<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F0EEEE">

    <ImageView
        android:id="@+id/imgbtn_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/bg1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    <ImageButton
        android:background="@null"
        android:id="@+id/img_btn_order"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/buy"
        android:layout_marginRight="24dp"/>

    <ImageButton

        android:id="@+id/img_btn_orderlist"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/order" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">
    <ImageButton
        android:background="@null"
        android:id="@+id/img_btn_recipe"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:layout_marginRight="24dp"
        app:srcCompat="@drawable/recipes" />

    <ImageButton
        android:background="@null"
        android:id="@+id/img_btn_customer"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/customer" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">
    <ImageButton
        android:background="@null"
        android:id="@+id/img_btn_staff"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/staff"
        android:layout_marginRight="24dp"/>
        <ImageButton
            android:background="@null"
            android:id="@+id/img_btn_statistic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/statistic" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="40dp">
        <Button
            android:id="@+id/btn_logout"
            android:text="Đăng xuất"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>